<% unless notice.blank? %>
  <div class="alert alert-success">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong><%= notice %></strong>
  </div>
<% end %>
<% unless error.blank? %>
  <div class="alert alert-danger">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong><%= error %></strong>
  </div>
<% end %>

<h1>Visit Types</h1>

<table id="visit_types" class="datatable">
  <thead>
    <tr>
      <th style="display:none;">Id</th>
      <th>Name</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @visit_types.each do |visit_type| %>
      <tr>
        <td style="display:none;" class="id"><%= visit_type.id %></td>
        <td><%= visit_type.name %></td>
        <td><%= visit_type.price if current_user.finance_person? %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<a href="<%= root_path %>" class="btn btn-default">Back</a>
<button type="button" class="btn btn-primary" onclick="openDialog('visit_type_modal','<%= new_visit_type_path %>')">New Visit Type</button>
<div id="visit_type_modal" class="modal fade" role="dialog"></div>

<script>
$( document ).ready(function() {
  formatTable('visit_types', 'visit_type_modal', 'visit_types');
});
</script>
