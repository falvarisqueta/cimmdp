<% unless notice.blank? %>
  <div class="alert alert-success">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong><%= notice %></strong>
  </div>
<% end %>

<h1>Listado Doctores Refererentes</h1>

<%= form_tag doctors_path, :method => 'get' do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table id="doctors" class="table table-striped">
  <thead>
    <tr>
      <th><%= sortable "name", "Nombre"%></th>
      <th>Specialty</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.full_name %></td>
        <td><%= doctor.specialty %></td>
        <td><%= doctor.mail %></td>
        <td><%= doctor.phone %></td>
        <td><%= doctor.address %></td>
        <td><button type="button" class="btn btn-primary" onclick="openDialog('doctor_modal','<%= doctor_path(doctor) %>')">Edit</button></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @doctors %>
<br>
<button type="button" class="btn btn-primary" onclick="openDialog('doctor_modal','<%= new_doctor_path %>')">Nuevo Doctor</button>
<div id="doctor_modal" class="modal fade" tabindex="-1" role="dialog"></div>
